<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - e-Service</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("e-Service", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    @Html.Partial("_LoginPartial")
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @Html.ActionLink("Добави", "Add", "Orders", new { area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Всички поръчки", "All", "Orders", new { area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("Неприключени", "UnFinished", "Orders", new { area = "" }, null)
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section id="services">
        <div class="container text-center">
            @RenderBody()
        </div>
    </section>

    <footer id="footer" class="footer">
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year - e-Service</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
